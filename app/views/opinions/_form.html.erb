<%= form_with(model: opinion, local: true, class: 'form-horizontal' ) do |form|%>
  <% if opinion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(opinion.errors.count, "error") %> prohibited this opinion from being saved:</h2>

      <ul>
      <% opinion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :preview, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :preview, id: :opinion_preview, class: "form-control", placeholder: "Enter a preview"  %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :explanation, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :explanation, id: :opinion_explanation, class: "form-control", placeholder: "Enter a explanation"  %>
    </div>
  </div>


  <div class="form-group">
    <%= form.label :proof, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.file_field :proof, id: :opinion_explanation, class: "form-control"%>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>