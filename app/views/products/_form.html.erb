<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= form.label :title, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :title, id: :product_title, class: "form-control", placeholder: "Enter a title"  %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_area :description, id: :product_description, class: "form-control", placeholder: "Enter a description"  %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :price, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.number_field :price, id: :product_price, class: "form-control", placeholder: "Enter a price"  %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label 'Categories:', class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <% @categories.each do |category| %>
        <%= check_box_tag "product[category_ids][]", category.id, product.categories.include?(category) %>
        <%= category.name %><br />
      <% end %>
    </div>
  </div>


  <div class="form-group">
    <%= form.label :thumbnail, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.file_field :thumbnail, id: :opinion_explanation, class: "form-control"%>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
